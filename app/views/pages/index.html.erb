<h1>Compara tu restaurante!</h1>

<%= form_tag restaurant_path, :method => 'get' do %>
	
	<input type="radio" name="modo" value="nueva_apertura">
	<%=label_tag(:nueva_apertura) %>
 	</br>
	
	<input type="radio" name="modo" value="traspaso">
	<%=label_tag(:traspaso) %>
 	</br>	
	
	<%=label_tag(:precio_medio_del_plato) %></br>
 	
 		<input type="radio" name="precio" value="bajo">
 			<%=label_tag(:bajo) %>
 		<input type="radio" name="precio" value="medio">
 			<%=label_tag(:medio) %>
 		<input type="radio" name="precio" value="alto">
 			<%=label_tag(:alto) %>
 		</br>

 	<%=submit_tag "Comparar",:name => "nill" %>
 	
<% end %>

<% if @countries %>
	<% @countries.each do |country| %>
		<%= country[:name] %> - <%= country[:pond] %><br />
	<% end %>
<% end %>